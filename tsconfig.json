{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist",
    "removeComments": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules"]
}